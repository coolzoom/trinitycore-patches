+            player->SetIndividualRate(INDIVIDUAL_XP_QUEST, questRate);
+            handler->PSendSysMessage(LANG_INDIVIDUAL_QUESTRATE_SET, questRate);
+            return true;
+        }
+
+        return true;
+    }
